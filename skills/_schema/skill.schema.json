{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Slavik Skill Front Matter",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "version",
    "title",
    "entrypoints",
    "patterns",
    "requires",
    "risk",
    "tests"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9._-]{1,63}$"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "entrypoints": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1
    },
    "patterns": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1
    },
    "requires": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "risk": {
      "type": "string",
      "enum": ["low", "medium", "high"]
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "deprecated": {
      "type": "boolean"
    },
    "replaced_by": {
      "type": "string",
      "minLength": 1
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "deprecated": {"const": true}
        }
      },
      "then": {
        "required": ["replaced_by"]
      }
    }
  ]
}
